<div class="container">

  <div class="company row" ng-repeat="(id, company) in companies">
    <div class="col-xs-1">

    </div>
    <div class="col-md-9 col-xs-11">

      <div class="info">
        <a href="{{ company.url }}">
          {{ company.name }}
          <span class="url">({{ company.url | hostnameFromUrl }})</span>
        </a>
      </div>

      <div>
        <span>submitted by <a href="#/users/{{ company.user_id }}">{{ company.owner }}</a></span>
        â€”
        <a href="/companies/{{ company.id }}">comments</a>
        <a ng-click="deletePost(company.id)" ng-show="signedIn() && company.owner === currentUser.username">delete</a>
      </div>
    </div>
    <div class="col-md-2">

    </div>

  </div>

</div> <!-- /container -->
